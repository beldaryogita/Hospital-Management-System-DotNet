@model Treatment

<h2>Edit Treatment</h2>

<form asp-action="EditTreatment" asp-controller="Treatments" method="post">
    @Html.HiddenFor(model => model.TreatmentId)

    <div class="form-group">
        <label asp-for="PatientId">Patient:</label>
        <select asp-for="PatientId" class="form-control" asp-items="@(new SelectList(ViewBag.Patients, "PatientId", "Name", Model.PatientId))">
            <option value="">Select Patient</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId">Doctor:</label>
        <select asp-for="DoctorId" class="form-control" asp-items="@(new SelectList(ViewBag.Doctors, "DoctorId", "Name", Model.DoctorId))">
            <option value="">Select Doctor</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diagnosis">Diagnosis:</label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prescription">Prescription:</label>
        <input asp-for="Prescription" class="form-control" />
        <span asp-validation-for="Prescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TreatmentDate">Treatment Date:</label>
        <input asp-for="TreatmentDate" class="form-control" />
        <span asp-validation-for="TreatmentDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Treatment</button>
</form>

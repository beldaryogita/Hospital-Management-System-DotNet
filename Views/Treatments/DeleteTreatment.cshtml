@model Treatment

<h2>Delete Treatment</h2>

<h3>Are you sure you want to delete this treatment?</h3>
<div>
    <h4>Treatment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.TreatmentDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Patient
        </dt>
        <dd class="col-sm-10">
            @Model.Patient.FirstName @Model.Patient.LastName
        </dd>
        <dt class="col-sm-2">
            Doctor
        </dt>
        <dd class="col-sm-10">
            @Model.Doctor.FirstName @Model.Doctor.LastName
        </dd>
        <dt class="col-sm-2">
            Diagnosis
        </dt>
        <dd class="col-sm-10">
            @Model.Diagnosis
        </dd>
        <dt class="col-sm-2">
            Prescription
        </dt>
        <dd class="col-sm-10">
            @Model.Prescription
        </dd>
    </dl>

    <form asp-action="DeleteTreatment" method="post">
        <input type="hidden" asp-for="TreatmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Treatments" class="btn btn-secondary">Cancel</a>
    </form>
</div>
